<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GreenHarbour" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.GreenHarbour.Main" parent="Base.Theme.GreenHarbour" >
        <item name="android:colorPrimary">#07432E</item>
        <item name="android:colorPrimaryDark">#07432E</item>
        <item name="android:colorAccent">#07432E</item>
    </style>

    <style name="Theme.GreenHarbour.Sub" parent="Base.Theme.GreenHarbour" >
        <item name="android:colorPrimary">#069563</item>
        <item name="android:colorPrimaryDark">#069563</item>
        <item name="android:colorAccent">#069563</item>
    </style>

    <style name="Theme.GreenHarbour" parent="Base.Theme.GreenHarbour"/>

    <style name="MaterialAlertDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorner</item>
    </style>

    <style name="DialogCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Theme.GreenHarbour.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GreenHarbour.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GreenHarbour.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>